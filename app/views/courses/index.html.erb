<section class="grayarea" id="aboutOCF" >
    <div class="container">
        <div class="row">
            <div id="how"class="col-md-12 text-center">
                <h1>Our Classes</h1>
            </div>
        </div>
    </div>

    <div class="container" id="note">
        <div class="row">
            <!-- Course Loop -->
            <% @courses.each do |course| %>
                <div class="col-sm-4 animated notransition">
                    <div class="info-box shadow-large bottom0 wrap-courses">
                        <a href="sus.html">
                            <div class="info-box-inner">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <img class="course-img-mini" src="img/<%= course.name %>.jpg" alt="<%= course.title %>"/>
                                    </div>
                                    <div class="col-xs-12">
                                        <div class="info-content">
                                            <h2 class="class-title"><%= course.title %></h2>

                                            <p class="learn-more" >Learn more ></p>
                                        </div>
                                    </div>
                                </div>
                            </div>        
                        </a>
                        <div class="counter">
                            <p class="count-text">Course starting in <strong>1 month and 3 days</strong>.</p>
                            <div class="subscribe clearfix" >
                                <div class="centered">
                                    <a class="btn btn-success btn-lg" href="#">Apply now!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</section>